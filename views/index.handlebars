{{!-- css --}}
<style>
    #upload {
        opacity: 0;
    }

    #upload-label {
        position: absolute;
        top: 50%;
        left: 1rem;
        transform: translateY(-50%);
    }

    .image-area {
        width: 540px;
        height: 250px;
        border: 2px dashed rgba(255, 255, 255, 0.7);
        position: relative;
        overflow: hidden;
    }

    .image-area::before {
        content: 'Uploaded image result';
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 0.8rem;
        z-index: 1;
    }

    .image-area img {
        z-index: 2;
        position: relative;
    }
</style>
{{!-- JS --}}
<script type="text/javascript" src="/upload.js"></script>

<div class="container py-5">
    <!-- For demo purpose -->
    <header class="text-white text-center">
        <h1 class="display-4">Express image upload</h1>
    </header>
    <form action="upload" method="post" enctype="multipart/form-data">
        <div class="row py-4">
            <div class="col-lg-6 mx-auto">
                <!-- Upload image input-->
                <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm"> <input id="upload"
                        name="fileimage" type="file" onchange="readURL(this);" class="form-control border-0"> <label
                        id="upload-label" for="upload" class="font-weight-light text-muted">Choose file</label>
                    <div class="input-group-append"> <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i
                                class="fa fa-cloud-upload mr-2 text-muted"></i><small
                                class="text-uppercase font-weight-bold text-muted">Choose file</small></label> </div>
                </div> <!-- Uploaded image area-->
                <p class="font-italic text-white text-center">The image uploaded will be rendered inside the box below.
                </p>
                <div class="image-area mt-4"><img id="imageResult"
                        src="images/image_upload.jpg" alt="upload"
                        class="img-fluid rounded shadow-sm d-block"></div> <!-- Resize image --> <br>
                <div> <button type="submit" class="btn btn-info w-100" name="submit" value="sublit"> UPLOAD</button>
                </div>
            </div>
        </div>
    </form>
</div>
